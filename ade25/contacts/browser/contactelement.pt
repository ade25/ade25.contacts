<div class="app-contact-element"
  i18n:domain="ade25.contacts">
  <div class="app-contact-element-aside" tal:condition="view/has_image">
      <figure class="app-contact-element-media"
          tal:define="item_uuid context/UID;
                      image_data python:view.get_image_data(item_uuid)">
          <div class="img-fluid">
            <img class="lazyload"
                src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                data-sizes="auto"
                data-src="${image_data/large}"
                data-srcset="${image_data/small},
                             ${image_data/medium},
                             ${image_data/large},
                             ${image_data/original}" />
          </div>
          <noscript>
            <!-- Provide fallback for missing lazyload javascript -->
            <img tal:define="has_img context/image|nothing;
                             scales context/@@images|nothing"
                tal:condition="python:has_img and scales"
                tal:replace="structure python: scales.scale('image', scale='mini').tag(css_class='newsImage')" />
          </noscript>
        <figcaption tal:condition="exists:context/image_caption">
          ${context/image_caption}
        </figcaption>
      </figure>
  </div>
  <div class="app-contact-element-main">
      <div class="app-contact-element-title">
        ${context/Title}
      </div>
      <div class="app-contact-element-abstract" tal:condition="context/Description">
        ${context/Description}
      </div>
      <address class="app-contanct-element-block" tal:condition="view/has_address_info">
        ${context/address}<br>
        ${context/zipcode} ${context/city}
            <tal:extra tal:condition="python:context.address_extra">
                <br>${context/address_extra}
            </tal:extra>
      </address>
      <div class="app-contact-element-block app-contact-position" tal:condition="view/has_position_info">
        ${context/position}<br>
        ${context/department}
      </div>
      <address  lass="app-contact-element-block">
         <div class="app-contact-phone" tal:condition="context/phone"> ${context/phone}</div>
          <div class="app-contact-fax" tal:condition="context/fax"> ${context/fax}</div>
      </address>
      <div class="app-contact-actions" tal:condition="context/url">
        <a class="app-contact-link"
            href="${context/url}">${context/url}</a>
      </div>
      <div class="app-contact-actions" tal:condition="context/enquiry">
        <a class="app-contact-email btn btn-primary"
            tal:condition="context/email"
            href="${view/get_inquiry_form_link}"
            i18n:translate="">Send message</a>
      </div>
  </div>
</div>